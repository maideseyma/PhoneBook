@model ICollection<MemberViewModel>
@{
    ViewData["Title"] = "MemberIndex";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Sistemdeki Tüm Üyeler</h3>

<!-- USERS LIST -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Üye Bilgieri</h3>

        <div class="card-tools">
            <span class="badge badge-danger">Toplam @Model.Count Üye</span>
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>

        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <ul class="users-list clearfix">
            @foreach (var item in Model)
            {
                <li>
                    <img src="~/AdminLTE/dist/img/user1-128x128.jpg" alt="User Image">
                    <a class="users-list-name" href="#" style="font-weight:bold;">
                        @item.Name @item.Surname.ToUpper()
                    </a>
                    <span class="users-list-date" style="text-danger">
                        @{

                            TimeSpan span = new TimeSpan();
                            span = DateTime.Now - item.CreatedDate;
                            var days = Convert.ToInt32(span.TotalDays);
                            string result = string.Empty;
                            if (days == 0)
                            {
                                result = "Yeni Üye";
                            }
                            else
                            {
                                result = $"{days} Gündür Üye";
                            }
                        } @result
                    </span>
                </li>
            }
        </ul>
        <!-- /.users-list -->
    </div>
    <!-- /.card-body -->
</div>
    <!-- /.card-footer -->
</div>
<!--/.card -->